<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/detailPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/devondale"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailBack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/back"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/detailStar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/empty_star"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/detailBack"
            android:layout_alignBottom="@id/detailStar"
            android:textSize="15dp"
            android:text="ssdfasdhf"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/detailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="¥ 100.00"
            android:textColor="@color/blackText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detailInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/detailPrice"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="商品信息"
            android:textColor="@color/grayText"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="20dp"
            android:background="@color/line" />

        <ImageButton
            android:id="@+id/detailCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/shoplist" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@color/line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多产品信息"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/blackText" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@color/line"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.3"></ListView>
</LinearLayout>